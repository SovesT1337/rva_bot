# Production конфигурация для RVA Bot

# Telegram Bot Configuration
TELEGRAM_TOKEN=your_production_bot_token_here
TELEGRAM_API=https://api.telegram.org/bot

# Database Configuration (PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=rva_bot
DB_SSLMODE=disable

# Logging Configuration
LOG_LEVEL=INFO

# Bot Configuration
BOT_TIMEOUT=30
MAX_RETRIES=3

# Server Configuration
SERVER_PORT=8080
SERVER_READ_TIMEOUT=10
SERVER_WRITE_TIMEOUT=10

# Production-specific settings
# Увеличиваем таймауты для продакшена
# Устанавливаем INFO уровень логирования
# Используем PostgreSQL для продакшена
# DB_HOST=postgres указывает на сервис в docker-compose
# DB_SSLMODE=disable для Docker окружения (SSL не нужен внутри контейнеров)
